<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/new_login_gradients"
    tools:context=".konsultasi">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konsultasi"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#000"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint=" Nama Konsultan"
    android:drawableLeft="@drawable/ic_person_black_24dp"
    android:drawableTint="#000"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Permasalahan"
        android:drawableLeft="@drawable/ic_report_problem_black_24dp"
        android:drawableTint="#000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Nomor Telepon"
        android:inputType="phone"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawableTint="#000"
        />

    <EditText
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_event_black_24dp"
        android:hint=" Ajukan Tanggal Konsultasi "
        android:inputType="date"

        />

    <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Kirim "
            android:onClick="submit4"
            />

</LinearLayout>