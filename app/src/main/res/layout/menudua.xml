<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/new_login_gradients"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/statistik"
        android:layout_width="98dp"
        android:layout_height="63dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Statistik"
        android:textAlignment="center"
        android:textColor="#2E2D2D"
        android:onClick="stat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="328dp"
        android:layout_height="400dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/kotak"
        android:fadingEdge="horizontal|vertical"
        android:foregroundGravity="fill_horizontal|center_vertical|clip_horizontal|center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />


    <Button
        android:id="@+id/laporan"
        android:layout_width="98dp"
        android:layout_height="63dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Laporan"
        android:onClick="laporan"
        android:textAlignment="center"
        android:textColor="#2E2D2D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kalender"
        android:layout_width="98dp"
        android:layout_height="63dp"
        android:onClick="kalender"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Kalender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pengaturan"
        android:layout_width="98dp"
        android:layout_height="63dp"
        android:layout_marginTop="420dp"
        android:backgroundTint="@color/colorAccent"
        android:text="SETTING"
        android:onClick="setting"
        android:textAlignment="center"
        android:textColor="#2E2D2D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-black"
        android:text="FISH FARM"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>